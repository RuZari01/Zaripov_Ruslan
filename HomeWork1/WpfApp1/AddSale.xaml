        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="Окно регистрации заказа" HorizontalAlignment="Center" FontSize="30" Grid.Column="1" Margin="10,10,10,256" Grid.Row="1"/>
        <Label Content="Номер:" FontSize="15" Grid.Column="1" Margin="176,170,246,104" Grid.Row="1"/>
        <Label Content="Фамилия:" FontSize="15" Grid.Column="1" Margin="164,80,246,199" Grid.Row="1"/>
