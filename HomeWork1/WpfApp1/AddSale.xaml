        <TextBox x:Name="TextName" Grid.Row="1" Margin="248,130,10,159" Grid.Column="1" />
        <TextBox x:Name="TextLastName" Grid.Row="1" Margin="248,175,10,114" Grid.Column="1" />
        <TextBox x:Name="TextTovar" Grid.Row="1" Margin="248,220,10,69" Grid.Column="1" />
        <Button  x:Name="BtnAddZakaz" Content="Оформить заказ" Grid.Column="1" Margin="176,274,189,10" Grid.Row="1"/>
    </Grid>
</Window>
